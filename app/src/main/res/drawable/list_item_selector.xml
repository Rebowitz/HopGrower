<?xml version="1.0" encoding="utf-8"?><selector xmlns:android="http://schemas.android.com/apk/res/android">    <item android:state_pressed="true">        <shape>            <solid android:color="@color/white" />        </shape>    </item>    <item android:state_activated="true">        <shape>            <solid android:color="@color/itemselected" />        </shape>    </item>    <item android:state_selected="true">        <shape>            <solid android:color="@color/itemselected" />        </shape>    </item>    <item android:state_activated="false">        <shape>            <solid android:color="@color/hopcolor" />        </shape>    </item>    <!--    <item android:state_window_focused="false" android:state_selected="true" android:drawable="@color/blue" />    <item android:state_selected="true" android:drawable="@color/blue" />    <item android:state_pressed="true" android:state_selected="false" android:drawable="@color/white" />    <item android:state_selected="false" android:drawable="@color/hopcolor" />    --></selector>