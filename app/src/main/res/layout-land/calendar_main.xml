<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:background="#019E39">    <TextView        android:id="@+id/calendar_title"        android:layout_width="match_parent"        android:layout_height="10dp"        android:background="@drawable/text_border" />    <LinearLayout        android:baselineAligned="false"        android:layout_width="match_parent"        android:layout_height="0dp"        android:orientation="horizontal"        android:background="#019E39"        android:layout_weight="2">        <LinearLayout            android:id="@+id/calendar1"            android:baselineAligned="false"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:background="#019E39"            android:layout_weight="1" />        <FrameLayout            android:id="@+id/calendarfrag"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1" />    </LinearLayout>    <LinearLayout        android:id="@+id/button_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:id="@+id/blank_textview"            android:layout_width="match_parent"            android:layout_height="40dp"            android:padding="10dp"            android:background="#019E39" />    </LinearLayout></LinearLayout>