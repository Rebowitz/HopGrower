<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:background="#019E39">    <TextView        android:id="@+id/growlog_title"        android:layout_width="match_parent"        android:layout_height="10dp"        android:background="@drawable/text_border" />    <LinearLayout        android:baselineAligned="false"        android:layout_width="match_parent"        android:layout_height="0dp"        android:orientation="horizontal"        android:background="#019E39"        android:layout_weight="3">        <fragment            android:id="@+id/growlog"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            class="com.hfv.hopgrower.screens.GrowLogLeftMainFragment" />        <FrameLayout            android:id="@+id/gl_entries"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="3" />    </LinearLayout>    <LinearLayout        android:id="@+id/gl_addrec_button"        android:layout_width="match_parent"        android:layout_height="70dp"        android:orientation="vertical"        android:background="#019E39"        android:weightSum="3"        android:gravity="center">        <Button            android:id="@+id/addEntry"            android:text="@string/growlog_add"            android:layout_width="300dp"            android:layout_height="0dp"            android:layout_weight="2"            android:visibility="gone" />    </LinearLayout>    <LinearLayout        android:id="@+id/gl_saverec_button"        android:layout_width="match_parent"        android:layout_height="70dp"        android:orientation="vertical"        android:background="#019E39"        android:weightSum="3"        android:gravity="center"        android:visibility="gone">        <!--           <Button android:id="@+id/cancelit"                 android:text="@string/growlog_add"               android:layout_width="300dp"               android:layout_height="0dp"               android:layout_weight="2"/>           -->        <Button            android:id="@+id/saveglentry"            android:text="@string/growlog_save"            android:layout_width="300dp"            android:layout_height="0dp"            android:layout_weight="2" />    </LinearLayout></LinearLayout>