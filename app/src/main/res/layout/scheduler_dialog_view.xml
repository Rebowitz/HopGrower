<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="match_parent"    android:orientation="vertical">    <TextView        android:id="@+id/eventtitle"        android:layout_height="wrap_content"        android:layout_width="match_parent" />    <ListView        android:id="@+id/list"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="10dp"        android:verticalSpacing="10dp"        android:gravity="center"        android:background="@color/hopcolor" />    <View        android:id="@+id/theDivider"        android:layout_height="2dp"        android:layout_width="fill_parent"        android:background="#10DA5C" /></LinearLayout><!-- 	    android:stretchMode="columnWidth" -->