<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <TableLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_marginLeft="25dp"        android:divider="@drawable/list_divider_hopcolor"        android:layout_weight=".3">        <TableRow android:layout_marginLeft="25dp">            <TextView                android:id="@+id/mhdisp_panel"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/mhdisp_panel"                android:textSize="25sp" />            <TextView                android:id="@+id/recordnum"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text=""                android:textSize="25sp" />        </TableRow>        <!-- Variety -->        <TableRow            android:id="@+id/disp_layout1"            android:layout_marginLeft="25dp"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="25sp"                android:text="@string/variety" />            <TextView                android:id="@+id/disp_variety"                android:textSize="25sp"                android:layout_weight="66"                android:layout_width="0dp"                android:layout_height="wrap_content" />        </TableRow>        <!-- Year Planted -->        <TableRow            android:id="@+id/disp_layout_yrplant"            android:layout_marginLeft="25dp"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:id="@+id/yptext"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="25sp"                android:text="@string/yr_planted" />            <TextView                android:id="@+id/disp_yrplant"                android:textSize="25sp"                android:layout_height="wrap_content"                android:layout_weight="66"                android:layout_width="0dp"                android:entries="@array/yearsago" />        </TableRow>        <!-- Location -->        <TableRow            android:id="@+id/disp_layout_loc"            android:layout_marginLeft="25dp"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:id="@+id/textView1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="25sp"                android:text="@string/location" />            <TextView                android:id="@+id/disp_location"                android:textSize="25sp"                android:layout_height="wrap_content"                android:layout_weight="66"                android:layout_width="0dp" />        </TableRow>        <!-- Acreage -->        <TableRow            android:id="@+id/disp_layout_acreage"            android:layout_marginLeft="25dp"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:visibility="gone">            <TextView                android:id="@+id/acreage_text"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="25sp"                android:text="@string/acreage" />            <TextView                android:id="@+id/disp_acreage"                android:textSize="25sp"                android:layout_height="wrap_content"                android:layout_weight="66"                android:layout_width="0dp" />        </TableRow>        <!-- Bines -->        <TableRow            android:id="@+id/disp_layout_bines"            android:layout_marginLeft="25dp"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:id="@+id/bines_text"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingRight="5dp"                android:textSize="25sp"                android:text="@string/num_bines" />            <TextView                android:id="@+id/disp_bines"                android:textSize="25sp"                android:layout_height="wrap_content"                android:layout_weight="66"                android:layout_width="0dp" />        </TableRow>        <!-- Density -->        <TableRow            android:id="@+id/disp_layout_density"            android:layout_marginLeft="25dp"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:visibility="gone">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="25sp"                android:text="@string/density" />"            <TextView                android:id="@+id/disp_density"                android:textSize="25sp"                android:layout_height="wrap_content"                android:layout_weight="66"                android:layout_width="0dp" />        </TableRow>        <!-- trellis height -->        <TableRow            android:id="@+id/disp_layout5"            android:layout_marginLeft="25dp"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="25sp"                android:text="@string/trellis_hgt" />            <TextView                android:id="@+id/disp_trellis_height"                android:textSize="25sp"                android:layout_weight="66"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:entries="@array/listTHeight" />        </TableRow>        <!-- Irrigation type -->        <TableRow            android:id="@+id/disp_layout7"            android:layout_marginLeft="25dp"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="25sp"                android:text="@string/irr_type" />            <TextView                android:id="@+id/disp_irrigation"                android:textSize="25sp"                android:layout_weight="66"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:entries="@array/glrec_irrigate" />        </TableRow>        <TableRow            android:layout_width="match_parent"            android:layout_marginLeft="25dp"            android:layout_height="wrap_content"            android:visibility="gone">            <Button                android:id="@+id/mh_button_edit"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:text="@string/edit_mh"                android:width="100dip"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:layout_weight="1" />            <Button                android:id="@+id/mh_button_clear"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:text="@string/clear"                android:width="100dip"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:layout_weight="1"                android:visibility="invisible" />        </TableRow>    </TableLayout>    <!--        </LinearLayout>        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_marginLeft="25dp"            android:orientation="vertical">        -->    <TableLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_marginRight="10dp"        android:divider="@drawable/list_divider_hopcolor"        android:layout_weight=".7">        <TableRow android:layout_marginLeft="25dp">            <ImageView                android:id="@+id/grid_item_image1"                android:layout_marginRight="10dp"                android:src="@drawable/schedule"                android:layout_width="50dp"                android:layout_height="50dp"></ImageView>            <TextView                android:id="@+id/grid_item_label1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/mhschedule"                android:layout_marginTop="5dp"                android:textSize="20sp"                android:textColor="@color/white" />        </TableRow>        <TableRow android:layout_marginLeft="25dp">            <ListView                android:id="@+id/schedList"                android:layout_width="fill_parent"                android:layout_height="fill_parent"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@drawable/list_border" />        </TableRow>        <TableRow android:layout_marginLeft="25dp">            <ImageView                android:id="@+id/grid_item_image2"                android:layout_marginRight="10dp"                android:src="@drawable/link"                android:layout_width="50dp"                android:layout_height="50dp"                android:contentDescription="icon"></ImageView>            <TextView                android:id="@+id/grid_item_label2"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/mhgrowlog"                android:layout_marginTop="5dp"                android:textSize="20sp"                android:textColor="@color/white" />        </TableRow>        <TableRow android:layout_marginLeft="25dp">            <ListView                android:id="@+id/growlogList"                android:layout_width="fill_parent"                android:layout_height="fill_parent"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@drawable/list_border" />        </TableRow>        <!--                <TableRow                    android:layout_marginLeft="25dp">                    <ImageView                        android:id="@+id/grid_item_image3"                        android:layout_marginRight = "10dp"                        android:src="@drawable/notes2"                        android:layout_width="50dp"                        android:layout_height="50dp">                    </ImageView>                    <TextView                        android:id="@+id/grid_item_label3"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="@string/mhnotes"                        android:layout_marginTop="5dp"                        android:textSize="20sp"                        android:textColor="@color/white" />                </TableRow>                <TableRow                    android:layout_marginLeft="25dp">                    <ListView android:id="@+id/notesList"                        android:layout_width="fill_parent"                        android:layout_height="fill_parent"                         android:layout_marginLeft="10dp"                         android:layout_marginRight="10dp"                         android:textSize="20sp"                        android:background="@drawable/list_border"/>                </TableRow>        -->    </TableLayout></LinearLayout>