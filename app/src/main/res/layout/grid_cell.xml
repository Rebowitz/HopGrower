<?xml version="1.0" encoding="UTF-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:id="@+id/grid_cell"    android:padding="5dp">    <ImageView        android:id="@+id/grid_item_image"        android:layout_marginRight="10px"        android:src="@drawable/hop_cone2"        android:layout_width="50px"        android:layout_height="50px"></ImageView>    <TextView        android:id="@+id/grid_item_label"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@+id/label"        android:layout_marginTop="5px"        android:textSize="20px"        android:textColor="@color/white" /></LinearLayout>