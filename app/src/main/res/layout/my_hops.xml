<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:background="#019E39">    <TextView        android:id="@+id/myhops_title"        android:layout_width="match_parent"        android:layout_height="10dp"        android:background="@drawable/text_border" />    <LinearLayout        android:baselineAligned="false"        android:layout_width="match_parent"        android:layout_height="0dp"        android:orientation="horizontal"        android:background="#019E39"        android:layout_weight="3">        <com.hfv.hopgrower.special.MyHopsViewPager            android:id="@+id/viewpager"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1" />        <!--                  <LinearLayout                        android:baselineAligned="false"                        android:layout_width="0dp"                        android:layout_height="wrap_content"                        android:orientation="horizontal"                        android:background="#10DA5C"                        android:layout_weight="1">                     <fragment                        android:id="@+id/mh_entries"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        class="com.hfv.hopgrower.screens.MyHopsRightFragment"/>                </LinearLayout>        -->    </LinearLayout>    <LinearLayout        android:id="@+id/mh_addrec_button"        android:layout_width="match_parent"        android:layout_height="70dp"        android:orientation="vertical"        android:background="#10DA5C"        android:weightSum="3"        android:gravity="center">        <Button            android:id="@+id/addEntry"            android:text="@string/myhops_add"            android:layout_width="300dp"            android:layout_height="0dp"            android:layout_weight="2" />    </LinearLayout>    <LinearLayout        android:id="@+id/mh_saverec_button"        android:layout_width="match_parent"        android:layout_height="70dp"        android:orientation="vertical"        android:background="#019E39"        android:weightSum="3"        android:gravity="left"        android:visibility="gone">        <!--           <Button android:id="@+id/cancelit"                 android:text="@string/myhops_add"               android:layout_width="300dp"               android:layout_height="0dp"               android:layout_weight="2"/>           -->        <Button            android:id="@+id/savemhentry"            android:text="@string/myhops_save"            android:layout_width="300dp"            android:layout_height="0dp"            android:layout_weight="2" />    </LinearLayout></LinearLayout>