<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="horizontal">        <TextView            android:id="@+id/interval"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="30dp"            android:layout_marginLeft="10dp"            android:text=""            android:textColor="#FFFFFF"            android:layout_weight="1" />        <TextView            android:id="@+id/location"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="30dp"            android:text=""            android:textColor="#FFFFFF"            android:layout_weight="1" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="horizontal">        <TextView            android:id="@+id/event"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="30dp"            android:layout_marginLeft="10dp"            android:text=""            android:textColor="#FFFFFF"            android:layout_weight="1" />        <TextView            android:id="@+id/event_other"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="30dp"            android:text=""            android:textColor="#FFFFFF"            android:layout_weight="1" />    </LinearLayout></LinearLayout>