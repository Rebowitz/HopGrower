<manifest xmlns:android="http://schemas.android.com/apk/res/android"    package="hfv.com.hopgrower">    <application        android:allowBackup="true"        android:icon="@drawable/hop_cone"        android:label="@string/app_name"        android:supportsRtl="true"        android:theme="@style/AppTheme">        <activity            android:name="com.hfv.hopgrower.activity.MainActivity"            android:label="@string/app_name">            <intent-filter>                <action android:name="android.intent.action.MAIN" />                <category android:name="android.intent.category.LAUNCHER" />            </intent-filter>        </activity>        <activity android:name="com.hfv.hopgrower.activity.AboutActivity"></activity>        <activity android:name="com.hfv.hopgrower.activity.VarietiesActivity"></activity>        <activity android:name="com.hfv.hopgrower.activity.VarietiesItemActivity"></activity>        <activity android:name="com.hfv.hopgrower.activity.NotesActivity"></activity>        <activity android:name="com.hfv.hopgrower.screens.NotesEdit"></activity>        <!--  <activity android:name="com.hfv.hopgrower.screens.NotesDisplay"></activity> -->        <activity android:name="com.hfv.hopgrower.screens.NotesCreate"></activity>        <activity android:name="com.hfv.hopgrower.activity.SettingsActivity"></activity>        <activity            android:name="com.hfv.hopgrower.activity.GrowLogActivity"            android:windowSoftInputMode="adjustPan"></activity>        <activity android:name="com.hfv.hopgrower.activity.MHViewPagerActivity"></activity>        <activity            android:name="com.hfv.hopgrower.activity.ScheduleActivity"            android:windowSoftInputMode="adjustPan|stateHidden"></activity>        <activity android:name="com.hfv.hopgrower.activity.MailSenderActivity">        </activity>    </application></manifest>